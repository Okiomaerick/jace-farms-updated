{
  "name": "jace-farms-server",
  "version": "1.0.0",
  "description": "Backend for Jace Farms & Consultancy Services Ltd",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd ../client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd ../client && npm install && npm run build",
    "heroku-postbuild": "npm install && npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^2.0.20"
  }
}
